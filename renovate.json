{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "automergeType": "pr",
  "automergeStrategy": "fast-forward",
  "rangeStrategy": "bump",
  "rebaseWhen": "automerging",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "npm": {
    "minimumReleaseAge": "3 days"
  }
}
